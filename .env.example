# IOT  Logger - Environment Variables
# Skopiuj do .env i uzupełnij własnymi wartościami

# === WYMAGANE CREDENTIALS ===
# Hasło do panelu administratora (użyj silnego hasła!)
WATER_SYSTEM_ADMIN_PASSWORD=change_this_to_secure_password

# Token autoryzacji dla ESP32 API (użyj silnego tokena!)
WATER_SYSTEM_API_TOKEN=change_this_to_secure_token

# Lista dozwolonych ID urządzeń (oddzielone przecinkami)
WATER_SYSTEM_DEVICE_IDS=DOLEWKA,ESP32_DEVICE_002

# === OPCJONALNE KONFIGURACJE ===

# Ścieżki do plików (domyślne działają dla standardowej instalacji)
WATER_SYSTEM_DATABASE_PATH=/home/kichnu/tap_off_water-vps/water_events.db
WATER_SYSTEM_LOG_PATH=/home/kichnu/tap_off_water-vps/app.log

# Porty aplikacji
WATER_SYSTEM_HTTP_PORT=5000
WATER_SYSTEM_ADMIN_PORT=5001

# Tryb nginx reverse proxy (true/false)
WATER_SYSTEM_NGINX_MODE=true

# Konfiguracja sesji i bezpieczeństwa
WATER_SYSTEM_SESSION_TIMEOUT=30
WATER_SYSTEM_MAX_FAILED_ATTEMPTS=8
WATER_SYSTEM_LOCKOUT_DURATION=1

# Poziom logowania (DEBUG, INFO, WARNING, ERROR)
WATER_SYSTEM_LOG_LEVEL=INFO

# Klucz sesji Flask (zostaw puste dla auto-generate)
WATER_SYSTEM_SECRET_KEY=

# === GENEROWANIE BEZPIECZNYCH CREDENTIALS ===
# Użyj komendy: python generate_credentials.py --output env
